<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.a.mapper.AMapper">
	<insert id="joinUserA" parameterType='egovframework.a.model.userADTO'> 
		INSERT INTO USER (
		id, password
		) values(
		#{id},
		#{password}
		)
	</insert>
	
	<!-- 데이터베이스에 같은 userId가 있는지 체크하는 쿼리문 -->
	<select id="userId" parameterType='egovframework.a.model.userADTO' resultType="int">
		select count(id) from user
		where id = #{id}
	</select>
	
	<select id="loginID" parameterType='egovframework.a.model.userADTO' resultType="int">
	select count(*) from user
	where id = #{id} and password = #{password}
	</select>
	
	
</mapper>
